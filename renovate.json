{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "assignees": [
        "AliSajid"
    ],
    "baseBranches": [
        "next"
    ],
    "extends": [
        "config:best-practices",
        "group:githubArtifactActions",
        ":rebaseStalePrs"
    ],
    "labels": [
        "dependencies",
        "renovate"
    ],
    "packageRules": [
        {
            "automerge": true,
            "groupName": "Repository Maintenance",
            "groupSlug": "repository-maintenance",
            "matchManagers": [
                "pre-commit",
                "github-actions"
            ]
        },
        {
            "enabled": false,
            "matchFileNames": [
                "Dockerfile"
            ],
            "matchManagers": [
                "dockerfile"
            ]
        },
        {
            "groupName": "Shuttle",
            "groupSlug": "shuttle",
            "matchPackageNames": [
                "shuttle-*"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ]
        },
        {
            "groupName": "serde",
            "groupSlug": "serde",
            "matchPackageNames": [
                "serde*"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ]
        },
        {
            "automerge": true,
            "matchDepTypes": [
                "devDependencies"
            ]
        }
    ],
    "platformCommit": "enabled",
    "pre-commit": {
        "enabled": true
    },
    "schedule": [
        "after 10pm every weekday",
        "every weekend",
        "before 5am every weekday"
    ],
    "semanticCommits": "enabled"
}
